[Unit]
Description=Monasca Persister
After=kafka.service influxdb.service

[Service]
Type=simple
User={{ persister_user }}
Group={{ monasca_group }}
Restart=on-failure
ExecStart=/usr/bin/java -Dfile.encoding=UTF-8 {{ monasca_persister_java_opts }} -cp {{ monasca_jars_virtualenv_dir }}/lib/monasca-persister-{{monasca_persister_version}}-shaded.jar:{{ vertica_jdbc_location }} monasca.persister.PersisterApplication server {{ 'monasca' | config_dir() }}/persister-config.yml

[Install]
WantedBy=multi-user.target
