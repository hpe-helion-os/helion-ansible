[Unit]
Description=Create {{ neutron_common_rundir }}

[Service]
ExecStartPre=/bin/mkdir -p {{ neutron_common_rundir }}
ExecStartPre=/bin/chmod 775 {{ neutron_common_rundir }}
ExecStart=/bin/chown -R {{ neutron_user }}:{{ neutron_group }} {{ neutron_common_rundir }}

[Install]
RequiredBy=neutron-server.service
RequiredBy=neutron-dhcp-agent.service
RequiredBy=neutron-l3-agent.service
RequiredBy=neutron-lbaas-agent.service
RequiredBy=neutron-lbaasv2-agent.service
RequiredBy=neutron-metadata-agent.service
RequiredBy=neutron-openvswitch-agent.service
RequiredBy=neutron-ovsvapp-agent.service
RequiredBy=neutron-ovsvapp-agent-monitor.service
RequiredBy=neutron-vpn-agent.service
